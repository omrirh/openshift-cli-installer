---
kind: InstallConfig
apiVersion: v1
baseDomain: {{ base_domain }}
credentialsMode: Passthrough
compute:
- architecture: amd64
  hyperthreading: Enabled
  name: worker
  platform:
    aws:
      type: {{ worker_flavor|default("m5.4xlarge", true) }}
      rootVolume:
        iops: 2000
        size: {{ worker_root_disk_size|default("128", true) }}
  replicas: {{ worker_replicas|default("3", true) }}
controlPlane:
  architecture: amd64
  hyperthreading: Enabled
  name: master
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 120
        type: io1
      type: m5.2xlarge
      zones:
      - {{ region }}
  replicas: 3
metadata:
  name: {{ name }}
networking:
  clusterNetwork:
  - cidr: 192.168.0.0/20
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  aws:
    hostedZone: {{ route53_hosted_zone }}
    region: {{ region }}
    userTags:
      autoOff: True
    subnets:
    - {{ subnet_id }}
publish: Internal
fips: {{ fips|default("true", true) }}
sshKey: {{ ssh_key }}
pullSecret: '{{ pull_secret }}'
additionalTrustBundle: {{ trusted_ca }}
imageContentSources:
- mirrors:
  - {{ quay_host }}:8443/ocp411/openshift/release-images
  source: quay.io/openshift-release-dev/ocp-release
- mirrors:
  - {{ quay_host }}:8443/ocp411/openshift/release
  source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
